{
  "active_to_passive": [
    {
      "pattern": "^(Peneliti|Tim|Mahasiswa|Penulis|Pengamat)\\s+menganalisis\\s+(\\w+)",
      "replacement": "\\2 dianalisis oleh \\1",
      "description": "menganalisis -> dianalisis (subject di awal)"
    },
    {
      "pattern": "^(Peneliti|Tim|Mahasiswa|Penulis)\\s+mempelajari\\s+(\\w+)",
      "replacement": "\\2 dipelajari oleh \\1", 
      "description": "mempelajari -> dipelajari (subject di awal)"
    },
    {
      "pattern": "^(Peneliti|Tim|Penulis)\\s+mengembangkan\\s+(\\w+)",
      "replacement": "\\2 dikembangkan oleh \\1",
      "description": "mengembangkan -> dikembangkan (subject di awal)"
    }
  ],
  "passive_to_active": [
    {
      "pattern": "(\\w+)\\s+dianalisis\\s+oleh\\s+(\\w+)",
      "replacement": "\\2 menganalisis \\1",
      "description": "Transform passive voice back to active voice"
    }
  ],
  "clause_reordering": [
    {
      "pattern": "([^,]+),\\s*(karena|sebab|oleh karena)\\s+([^.]+)\\.",
      "replacement": "\\2 \\3, \\1.",
      "description": "Reorder causal clauses"
    }
  ],
  "conjunction_substitution": {
    "dan": {
      "alternatives": ["serta", "juga"],
      "context": "additive"
    },
    "tetapi": {
      "alternatives": ["namun", "akan tetapi"],
      "context": "adversative"
    },
    "karena": {
      "alternatives": ["sebab", "lantaran"],
      "context": "causal"
    },
    "jika": {
      "alternatives": ["apabila", "bila", "kalau"],
      "context": "conditional"
    },
    "atau": {
      "alternatives": ["ataupun", "maupun"],
      "context": "alternative"
    },
    "dengan": {
      "alternatives": ["melalui", "lewat"],
      "context": "instrumental"
    },
    "untuk": {
      "alternatives": ["guna", "demi", "buat"],
      "context": "purpose"
    },
    "pada": {
      "alternatives": ["di", "dalam"],
      "context": "locative"
    },
    "sangat": {
      "alternatives": ["amat", "sungguh", "benar-benar"],
      "context": "intensifier"
    },
    "banyak": {
      "alternatives": ["berlimpah", "sejumlah besar"],
      "context": "quantifier"
    }
  },
  "modifier_adjustment": [
    {
      "pattern": "\\bsangat\\b",
      "replacement": "amat",
      "description": "sangat -> amat"
    },
    {
      "pattern": "\\bselalu\\b",
      "replacement": "senantiasa",
      "description": "selalu -> senantiasa"
    },
    {
      "pattern": "\\bsering\\b",
      "replacement": "kerap",
      "description": "sering -> kerap"
    },
    {
      "pattern": "\\bcepat\\b",
      "replacement": "segera",
      "description": "cepat -> segera"
    },
    {
      "pattern": "\\bpenting\\b",
      "replacement": "krusial",
      "description": "penting -> krusial"
    },
    {
      "pattern": "\\bbesar\\b",
      "replacement": "signifikan",
      "description": "besar -> signifikan"
    }
  ],
  "sentence_structure": [
    {
      "pattern": "\\badalah\\b",
      "replacement": "merupakan",
      "description": "adalah -> merupakan"
    },
    {
      "pattern": "\\bmerupakan\\b",
      "replacement": "adalah",
      "description": "merupakan -> adalah"
    },
    {
      "pattern": "\\byaitu\\b",
      "replacement": "yakni",
      "description": "yaitu -> yakni"
    }
  ]
}
